# Application
APP_NAME=NeuraCraftBackend
APP_ENV=development
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=http://localhost:3000

# Security
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# Database (Azure SQL)
AZURE_SQL_SERVER=tcp:your-server.database.windows.net,1433
AZURE_SQL_DATABASE=your-db
AZURE_SQL_USERNAME=your-user@your-server
AZURE_SQL_PASSWORD=your-password
SQLALCHEMY_DATABASE_URI=mssql+pyodbc://your-user:your-password@your-server.database.windows.net:1433/your-db?driver=ODBC+Driver+18+for+SQL+Server

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_BLOB_FILES_CONTAINER=files

？すかか　# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-service.search.windows.net
AZURE_SEARCH_API_KEY=your-query-key
AZURE_SEARCH_ADMIN_KEY=your-admin-key
AZURE_SEARCH_INDEX_NAME=neura-files-v2
AZURE_SEARCH_DATASOURCE_NAME=neura-files-ds
AZURE_SEARCH_INDEXER_NAME=neura-files-idx
AZURE_SEARCH_SYNONYM_MAP_NAME=userdict-synonyms-v1

# LLM Settings (Azure OpenAI or Gemini)
# Provider: "azure_openai" or "gemini"
LLM_PROVIDER=azure_openai
LLM_API_KEY=your-llm-api-key
LLM_ENDPOINT=https://your-resource.openai.azure.com/
LLM_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=120


